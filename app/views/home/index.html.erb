<HR align=center width=80% color=orangered SIZE=10>

<div class="row row-cols-1 row-cols-md-4">
  <% Shop.all.each do |shop| %>
    <% shop.products.each do |product| %>
      <% if current_user == nil || current_user.id != product.shop.user.id%>
        <div class="col mb-4">
          <div class="card h-100 border-danger">
            <img src="<%= product.graph_link%>" class="card-img-top alligator-turtle" alt="..." height="200">
            <div class="card-body a">
              <h5 class="card-title" ><%= link_to product.name, [shop, product] %></h5>
              <p class="card-text"><%= product.description %></p>
              <% if current_user != nil %>
                <hr />

                <span style="font-size: small ">
                  <%= link_to "添加到收藏夹",
                              { controller: "favorites",
                                action: "create",
                                user_id: current_user.id,
                                product_id: product.id },
                              method: :post,
                              data: { confirm: "Are you sure?" } %></span>
            <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
