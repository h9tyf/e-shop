<p id="notice"><%= notice %></p>

<h1>Product Options</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_options.each do |product_option| %>
      <tr>
        <td><%= product_option.description %></td>
        <td><%= product_option.price %></td>
        <td><%= product_option.product_id %></td>
        <td><%= link_to 'Show', [@shop, @product, product_option] %></td>
        <td><%= link_to 'Edit', edit_shop_product_product_option_path( @shop.id, @product.id, product_option.id ) %></td>
        <td><%= link_to 'Destroy', [@shop, @product, product_option], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Back', shop_product_path(@shop, @product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Option', new_shop_product_product_option_path(product_id:@product.id) %>
