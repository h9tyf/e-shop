<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Shop</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <% if product.shop.id == @shop.id %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.shop.name %></td>
          <td><%= link_to 'Show', [@shop, product] %></td>
          <% if product.shop.user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_shop_product_path(@shop.id, product.id) %></td>
            <td><%= link_to 'Destroy', [@shop, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', shop_path(@shop) %>
