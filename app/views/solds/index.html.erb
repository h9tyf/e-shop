<p id="notice"><%= notice %></p>

<table id="hor-zebra">
  <thead>
  <tr>
    <th>店铺</th>
    <th>商品</th>
    <th>商品选项</th>
    <th>购买者</th>
    <th>地址</th>
    <th>电话</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% count = 0 %>
  <% @solds.each do |sold| %>
    <% if sold.product_option.product.shop.user == current_user %>
      <% if count % 2 == 0 %>
        <tr class="odd">
          <% count+=1 %>
      <% else %>
        <tr>
          <% count+=1 %>
      <% end %>
        <td width=15%><%= sold.product_option.product.shop.name %></td>
        <td width=15%><%= sold.product_option.product.name %></td>
        <td width=25%><%= sold.product_option.description %></td>
        <td width=15%><%= sold.user.email %></td>
        <td width=15%><%= sold.address %></td>
        <td width=15%><%= sold.phone %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

