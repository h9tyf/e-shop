<h1>Transaction Product Tables</h1>

<table>
  <thead>
    <tr>
      <th>Transaction</th>
      <th>Product option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transaction_product_tables.each do |transaction_product_table| %>
      <tr>
        <td><%= transaction_product_table.transaction_id %></td>
        <td><%= transaction_product_table.product_option_id %></td>
        <td><%= link_to 'Show', transaction_product_table %></td>
        <td><%= link_to 'Edit', edit_transaction_product_table_path(transaction_product_table) %></td>
        <td><%= link_to 'Destroy', transaction_product_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

